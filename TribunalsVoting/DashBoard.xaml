<UserControl x:Class="TribunalsVoting.DashBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TribunalsVoting"
             mc:Ignorable="d" 
             xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="auto" Width="auto">
    <Grid>
        <materialDesign:TransitioningContent x:Name="TransitionContentSlide" OpeningEffect="{materialDesign:TransitionEffect SlideInFromRight,Duration=0:0:0:0.5}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Margin="10" Width="200" Height="200" Source="Assets/tribunals.png" Stretch="Fill"/>
                <StackPanel Margin="50,10,10,10" VerticalAlignment="Center">
                    <TextBlock Text="CSG ELECTION" FontFamily="Segoe UI Semibold" FontSize="48" Foreground="#FF3827B4"/>
                    <TextBlock Text="April 03, 2020" FontFamily="Segoe UI Semibold" FontSize="30" Foreground="#FFACACAC"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:TransitioningContent>
    </Grid>
</UserControl>
